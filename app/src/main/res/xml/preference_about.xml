                <extra
                    a:name="ACTIVITY"
                    a:value="fulguris.activity.SettingsActivity" />

                <extra
                    a:name="FRAGMENT"
                    a:value="fulguris.settings.fragment.AboutSettingsFragment" />
            </intent>

        </Preference>

    </x.PreferenceCategory>

