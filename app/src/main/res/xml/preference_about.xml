                    a:name="ACTIVITY"
                    a:value="fulguris.activity.SettingsActivity" />

                <extra
                    a:name="FRAGMENT"
                    a:value="fulguris.settings.fragment.AboutSettingsFragment" />
            </intent>

        </Preference>

        <Preference
            a:title="@string/pref_title_privacy_policy"
            a:summary="@string/pref_summary_privacy_policy"
            x:iconSpaceReserved="false"
            x:icon="@drawable/ic_privacy_tip_outline"
